{ "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"params": [
  {"name": "width", "expr": "height"},
  {
    "name": "YearSelection",
    "value": 2001,
    "bind": {
      "input": "range",
      "min": 2001,
      "max": 2020,
      "step": 1,
      "name": "Year: "
    }
  },
    {
      "name": "Topnth",
      "value": 10,
      "bind": {
        "input": "range",
        "min": 5,
        "max": 15,
        "step": 1,
        "name": "Top nth: "
      }
    }
  ],
  "hconcat":[
  {
  "title": "The Top 10 countries which have the highest Internet Users(%)",
  "width": "container",
  "height": 330,
  "data": {
    "url": "https://raw.githubusercontent.com/GarnetTanWeiHong/FIT3179_Data_Viz_2/main/data/Final.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Internet Users(%)": "number",
        "Broadband Subscription": "number"
      }
    }
  },
  
  "layer": [
    { 
      "transform": [
        {"filter": "datum['Year'] == YearSelection"},
        {"filter": "datum['Code'] != 'Region'"},

        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "Internet Users(%)", "order": "descending"}]
        },
        {"filter": "datum.ranking <10"}
      ],
      "encoding": {
        "y": {"field": "Entity", "type": "ordinal", "sort": "-x",
        "axis":{"titleX":-100}
        },
        "x": {
          "field": "Internet Users(%)",
          "type": "quantitative",
        
          "scale": {"domain": [0, 109.99]},
          "axis":{"labelOverlap": true, "labelSeparation": 10}
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {
            "field": "Internet Users(%)",
            "type": "quantitative",
            "title": "Percentage of Users"
          }
        ]
      },
      "layer": [
        {"mark": "bar",
      "encoding": {
        "color": {"field": "Entity", "legend": null,"scale":
        {
          "domain": [
            "Norway",
            "Canada",
            "Republic of Korea (South Korea)",
            "Switzerland",
            "New Zealand",
            "Australia",
            "Sweden",
            "San Marino",
            "Iceland",
            "Denmark",
            "Finland",
            "United Kingdom",
            "Netherlands",
            "Liechtenstein",
            "Faeroe Islands",
            "Luxembourg",
            "United Arab Emirates",
            "Bahrain",
            "Qatar",
            "Kuwait",
            "Saudi Arabia"
          ],
          "range": [
            "#fed766",
            "#009fb7",
            "#fe4a49",
            "#61c0bf",
            "#f15a5a",
            "#3caea3",
            "#f97204",
            "#a8dadc",
            "#7209b7",
            "#ffd60a",
            "#f4a261",
            "#577590",
            "#f8961e",
            "#2a9d8f",
            "#a8dadc",
            "#006466",
            "#3282b8",
            "#fefae0",
            "#cad315",
            "#ba181b"
          ]
        }
        
   }
      }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 5
          },
          "encoding": {
            "text": {
              "field": "Internet Users(%)",
              "format": ".2f",
              "type": "quantitative"
            }
          }
        }
      ]
    }
  ]

},
{
  "width":"container",
  "height":330,
  "title": "The Top Nth Highest Number of Internet User",
  "data": {
      "url": "https://raw.githubusercontent.com/GarnetTanWeiHong/FIT3179_Data_Viz_2/main/data/Final.csv",
      "format": {
        "type": "csv",
        "parse": {
          "Year": "number",
          "Internet Users(%)": "number",
          "Broadband Subscription": "number"
        }
      }
    },

  "transform": [
    {"calculate": "datum['No. of Internet Users']-1+1", "as": "Noof Internet Users"},
    {"filter": "datum['Year'] == YearSelection"},
    {"filter": "datum['Entity'] != 'World'"},
    {"filter": "datum['Code'] != 'Region'"},
    {
        "window": [{"op": "rank", "as": "ranking"}],
        "sort": [{"field": "Noof Internet Users", "order": "descending"}]
    },
    {"filter": "datum.ranking < Topnth"}
    ],

  "layer": [
    {
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
    },
    {
    "mark": {"type": "text", "radiusOffset": 25, "angle":315, "dx":15},
    "encoding": {
      "text": {"field": "Entity", "type": "nominal"}
    }
  }],
  "encoding": {
    "theta": {"field": "Noof Internet Users", "type": "quantitative", "stack": true},
    "radius": {"field": "Noof Internet Users", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {"field": "Entity", "type": "nominal", "legend": null, "scale":{
        "domain": [
          "United States",
          "Norway",
          "Canada",
          "Republic of Korea",
          "Switzerland",
          "New Zealand",
          "Australia",
          "Sweden",
          "San Marino",
          "Iceland"
        ],
        "range": [
          "#fed766",
          "#009fb7",
          "#fe4a49",
          "#61c0bf",
          "#f15a5a",
          "#3caea3",
          "#f97204",
          "#a8dadc",
          "#7209b7",
          "#ffd60a"
        ]
      }  },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {
        "field": "Internet Users(%)",
        "type": "quantitative",
        "title": "Percentage of Users",
        "format":".4f"
      }
    ]
  }

  }
],
"config": {
  "concat":{"spacing": 75,
"columns": 2}
}
}